@model ProjectFinance2.Models.Account

<!DOCTYPE html>
<html>
<body>

<h2>Create an account to withdraw or deposit funds</h2>

    @using (Html.BeginForm("", "/CreateAccount", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Create Account</th>
            </tr>
            <tr>
                <td>Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.Name)
                </td>
            </tr>
            <tr>
                <td>Account Number: </td>
                <td>
                    @Html.TextBoxFor(m => m.AccountNumber)
                </td>
            </tr>
            <tr>
                <td>Current Balance: </td>
                <td>
                    @Html.TextBoxFor(m => m.CurrentBalance)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </table>
    }
</body>
</html> 