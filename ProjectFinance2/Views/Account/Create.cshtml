@model ProjectFinance2.Models.Account

    @using (Html.BeginForm("", "/CreateAccount", FormMethod.Post))
    {


<div>
    <div>
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"><strong>Create an account to withdraw or deposit funds</strong></h3>
            </div>
            <div class="modal-body">
    <div class="container" >
        <div class="row" style="flex-direction: column; align-items:center">
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="col-md-12" style="margin-top:15px;">
                         <label asp-for=Name style="font-weight:bold;"></label>
                        <input type='text' class='form-control' asp-for="Name" />
                        <span class="alert-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="col-md-12" style="margin-top:15px;">
                         <label asp-for=AccountNumber style="font-weight:bold;"></label>
                        <input type='text' class='form-control' asp-for=AccountNumber />
                        <span class="alert-danger" asp-validation-for=AccountNumber></span>
                        </div>
                        <div class="col-md-12" style="margin-top:15px;">
                         <label asp-for=CurrentBalance style="font-weight:bold;"></label>
                        <input type='text' class='form-control' asp-for=CurrentBalance />
                        <span class="alert-danger" asp-validation-for=CurrentBalance></span>
                        </div>

                        <div class="text-center col-md-12" style="margin-top:35px;">
                            <button class="btn btn-primary btn-sx" type="submit" value="Submit"><i class="glyphicon glyphicon-plus"></i> Create Account</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
                </div>
            </div>
        </div>
    </div>
     </div>


    }